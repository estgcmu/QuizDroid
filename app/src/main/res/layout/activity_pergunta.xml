<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pergunta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joaosoares.quizdroid.pergunta"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="O que representa a onomatopia 'zzz'?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/botao"
        android:id="@+id/imageButton6"
        android:scaleType="fitCenter"
        android:background="@null"
        android:onClick="alertaNormal"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="A:"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/textViewa"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:layout_marginStart="31dp"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Dormir"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:id="@+id/textView2"
        android:typeface="normal"
        android:gravity="center_vertical"
        android:textSize="26sp"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_toEndOf="@+id/textViewa"
        android:layout_alignBottom="@+id/imageButton6" />

</RelativeLayout>
